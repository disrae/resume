---
import { resumeData } from "../data/resume";
import BaseLayout from "../layouts/BaseLayout.astro";

const { personal, ventures, experience, education, skills, languages } =
    resumeData;
---

<style>
    @page {
        size: letter;
        margin: 0;
    }
    body {
        margin: 0;
    }
    .page-section {
        break-inside: avoid;
        page-break-inside: avoid;
    }
    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        padding-bottom: 0.25rem;
        border-bottom: 2px solid #e5e7eb;
    }
    .job-title,
    .venture-name,
    .school-name {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }
    .company-period,
    .venture-role,
    .education-degree {
        font-size: 0.9rem;
        color: #4b5563;
        margin-bottom: 0.25rem;
    }
    .achievement-list {
        margin-left: 1.5rem;
        margin-top: 0.25rem;
    }
    .achievement-item {
        margin-bottom: 0.25rem;
    }
    .tool-badge {
        display: inline-block;
        background-color: #f3f4f6;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .skill-language-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 0.5rem;
    }
</style>

<BaseLayout title="Resume PDF">
    <div
        class="p-6 pt-0 bg-white text-black max-w-4xl mx-auto"
        style="max-height: 10.5in;"
    >
        <header class="mb-6 page-section text-center">
            <h1 class="text-3xl font-bold mb-1">{personal.name}</h1>
            <p class="text-xl text-gray-600 mb-1">{personal.title}</p>
            <div class="text-sm">
                <p class="pl-28">
                    {personal.email} • <a
                        href={`https://linkedin.com/in/${personal.linkedin}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-teal-700 hover:underline"
                    >
                        linkedin.com/in/{personal.linkedin}
                    </a>
                </p>
                <p class="pl-[53px]">
                    Full Resume •
                    <a
                        href="https://www.danielisrael.dev"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-teal-700 hover:underline"
                        >www.danielisrael.dev</a
                    >
                </p>
            </div>
        </header>
        <main>
            <section class="mb-6">
                <h2 class="section-title">Experience</h2>
                {
                    experience.slice(0, 2).map((job) => (
                        <div class="mb-4 page-section">
                            <h3 class="job-title">{job.title}</h3>
                            <p class="company-period">
                                {job.company} | {job.period}
                            </p>
                            <ul class="achievement-list">
                                {job.achievements
                                    .slice(0, 4)
                                    .map((achievement) => (
                                        <li class="achievement-item text-sm text-gray-700">
                                            • {achievement}
                                        </li>
                                    ))}
                            </ul>
                            <div class="mt-1 flex flex-wrap">
                                {job.tools.map((tool) => (
                                    <span class="tool-badge">{tool}</span>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </section>

            <section class="mb-6">
                <h2 class="section-title">
                    {ventures.length > 0 ? "Ventures" : ""}
                </h2>
                {
                    ventures.slice(0, 1).map((venture) => (
                        <div class="mb-4 page-section">
                            <h3 class="venture-name">{venture.name}</h3>
                            <p class="venture-role">
                                {venture.role} | {venture.period}
                            </p>
                            <ul class="achievement-list">
                                {venture.features.slice(0, 2).map((feature) => (
                                    <li class="achievement-item text-sm text-gray-700">
                                        • {feature}
                                    </li>
                                ))}
                            </ul>
                            <div class="mt-1 flex flex-wrap">
                                {venture.tools.map((tool) => (
                                    <span class="tool-badge">{tool}</span>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </section>

            <section class="mb-6 page-section">
                <h2 class="section-title">Education</h2>
                {
                    education.slice(0, 1).map((edu) => (
                        <div class="mb-3">
                            <h3 class="school-name">{edu.school}</h3>
                            <p class="education-degree">{edu.degree}</p>
                            <p class="text-xs text-gray-500">{edu.period}</p>
                        </div>
                    ))
                }
            </section>

            <section class="page-section">
                <h2 class="section-title">Skills & Languages</h2>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <h3 class="font-semibold mb-2 text-base">Skills</h3>
                        <div class="skill-language-grid">
                            {
                                skills
                                    .slice(0, 5)
                                    .map((skill) => (
                                        <span class="tool-badge">{skill}</span>
                                    ))
                            }
                        </div>
                    </div>
                    <div>
                        <h3 class="font-semibold mb-2 text-base">Languages</h3>
                        <div class="skill-language-grid">
                            {
                                languages
                                    .slice(0, 4)
                                    .map((language) => (
                                        <span class="tool-badge">
                                            {language}
                                        </span>
                                    ))
                            }
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</BaseLayout>
