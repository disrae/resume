---
import { resumeData } from "../data/resume";
import BaseLayout from "../layouts/BaseLayout.astro";
import ExperienceSectionPDF from "../components/ExperienceSectionPDF.astro";

const { personal, ventures, experience, education, skills, languages } =
    resumeData;
---

<style>
    @page {
        size: letter;
        margin: -0.4in 0;
    }
    @media print {
        body {
            background-color: white !important;
        }
        .resume-container {
            box-shadow: none !important;
        }
    }
    .custom-bullet {
        padding-left: 1rem;
        text-indent: -0.6rem;
    }
</style>

<BaseLayout
    title="Daniel Israel Resume"
    style="bg-gray-200 md:bg-gray-200 min-h-screen"
>
    <div
        class="bg-white text-black max-w-[8.5in] mx-auto shadow-lg md:min-h-[11in] resume-container"
    >
        <div class="px-6 py-">
            <header
                class="mb-3 text-center break-inside-avoid page-break-inside-avoid"
            >
                <h1 class="text-3xl font-bold mb-1">{personal.name}</h1>
                <p class="text-xl text-gray-800 mb-1">{personal.title}</p>

                <!-- Contact -->
                <div class="text-sm">
                    <p class="md:pl-[53px]">
                        Full Resume •
                        <a
                            href="https://www.danielisrael.dev"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-teal-700 hover:underline"
                            >www.danielisrael.dev</a
                        >
                    </p>
                    <p class="md:pl-28">
                        {personal.email} • <a
                            href={`https://linkedin.com/in/${personal.linkedin}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-teal-700 hover:underline"
                        >
                            linkedin.com/in/{personal.linkedin}
                        </a>
                    </p>
                </div>
            </header>

            <main>
                <!-- Experience -->
                <section class="">
                    <h2
                        class="text-xl font-semibold pb-1 border-b-2 border-gray-300"
                    >
                        Experience
                    </h2>
                    <div class="flex flex-wrap">
                        {
                            experience.slice(0, 2).map((job, index) => (
                                <div
                                    class={`md:w-1/2 p-2 flex flex-col justify-between
                        ${index === 0 ? "md:border-r" : "md:border-l md:pl-4"}
                    `}
                                >
                                    <div>
                                        <h3 class="text-lg font-semibold">
                                            {job.title}
                                        </h3>
                                        <p class="text-sm font-medium text-gray-800 mb-1">
                                            <span class="font-medium">
                                                {job.company}
                                            </span>{" "}
                                            | {job.period}
                                        </p>
                                        <div class="flex flex-row flex-wrap text-sm text-gray-700">
                                            {job.links.map((link) => (
                                                <a
                                                    href={link.url}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="text-teal-700 hover:underline mr-2"
                                                >
                                                    {link.name}
                                                </a>
                                            ))}
                                        </div>
                                        <ul class="ml-1 mt-1">
                                            {job.achievements
                                                // .slice(0, 5)
                                                .map((achievement) => (
                                                    <li class="mb-1 text-xs text-gray-700 custom-bullet">
                                                        • {achievement}
                                                    </li>
                                                ))}
                                        </ul>
                                    </div>
                                    <div class="pt-2 flex flex-wrap">
                                        {job.tools.map((tool) => (
                                            <span class="inline-block bg-gray-100 px-2 py-1 rounded-full text-xs mr-2 mb-2">
                                                {tool}
                                            </span>
                                        ))}
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </section>

                <!-- Venture and Education -->
                <div class="flex flex-wrap">
                    <section class="w-full md:w-1/2">
                        <h2
                            class="text-xl font-semibold pb-1 border-b-2 border-gray-300"
                        >
                            Venture
                        </h2>
                        <div class="p-2 flex flex-col justify-between">
                            {
                                ventures.map((venture) => (
                                    <div class="flex flex-col justify-between h-full">
                                        <div>
                                            <h3 class="text-lg font-semibold">
                                                {venture.name}
                                            </h3>
                                            <p class="text-sm font-medium text-gray-800">
                                                {venture.role} |{" "}
                                                {venture.period}
                                            </p>
                                            <p class="text-sm text-gray-700">
                                                <a
                                                    href={venture.links[0].url}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="text-teal-700 hover:underline"
                                                >
                                                    {venture.links
                                                        .map(
                                                            (link) => link.name,
                                                        )
                                                        .join(", ")}
                                                </a>
                                            </p>
                                            <ul class="ml-1 mt-1">
                                                {venture.features.map(
                                                    (feature) => (
                                                        <li class="mb-1 text-xs text-gray-700 custom-bullet">
                                                            • {feature}
                                                        </li>
                                                    ),
                                                )}
                                            </ul>
                                        </div>
                                        <div class="pt-2 flex flex-wrap">
                                            {venture.tools.map((tool) => (
                                                <span class="inline-block bg-gray-100 px-2 py-1 rounded-full text-xs mr-2 mb-2">
                                                    {tool}
                                                </span>
                                            ))}
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </section>

                    <section class="w-full md:w-1/2">
                        <h2
                            class="text-xl font-semibold pb-1 pl-1 border-b-2 border-gray-300"
                        >
                            Education
                        </h2>
                        <div class="md:border-l-2 p-2 md:pl-4">
                            {
                                education.map((edu) => (
                                    <div class="mb-3">
                                        <h3 class="text-lg font-semibold">
                                            {edu.school}
                                        </h3>
                                        <p class="text-sm font-medium text-gray-800 mb-1">
                                            {edu.degree} | {edu.period}
                                        </p>
                                        <p class="text-sm text-gray-700 mt-1">
                                            {edu.details}
                                        </p>
                                        {!!edu.awards.length && (
                                            <div class="mt-2">
                                                <ul class="ml-1">
                                                    {edu.awards.map((award) => (
                                                        <li class="mb-1 text-xs text-gray-700 custom-bullet">
                                                            • {award}
                                                        </li>
                                                    ))}
                                                </ul>
                                            </div>
                                        )}
                                    </div>
                                ))
                            }
                        </div>
                    </section>
                </div>

                <!-- Skills & Languages -->
                <section class="">
                    <h2
                        class="text-xl font-semibold pb-1 border-b-2 border-gray-300"
                    >
                        Skills & Languages
                    </h2>
                    <div class="grid grid-cols-4 gap-4 p-2">
                        <div class="col-span-3">
                            <h3 class="font-semibold mb-2 text-base">Skills</h3>
                            <div
                                class="grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-2 justify-center items-center text-center"
                            >
                                {
                                    skills.map((skill) => (
                                        <span class="inline-block justify-center items-center bg-gray-100 px-2 py-1 rounded-full text-xs mr-2 mb-2">
                                            {skill}
                                        </span>
                                    ))
                                }
                            </div>
                        </div>
                        <div class="col-span-1">
                            <h3 class="font-semibold mb-2 text-base">
                                Languages
                            </h3>
                            <div
                                class="grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-2 justify-center items-center text-center"
                            >
                                {
                                    languages.map((language) => (
                                        <span class="inline-block bg-gray-100 px-2 py-1 rounded-full text-xs mr-2 mb-2">
                                            {language}
                                        </span>
                                    ))
                                }
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
</BaseLayout>
