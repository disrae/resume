{
  "name": "resume-pdf-generator",
  "version": "1.0.0",
  "description": "Generate ATS-friendly PDF resumes from HTML",
  "main": "generate-pdf.js",
  "scripts": {
    "gen": "node generate-pdf.js",
    "gen:custom": "node generate-pdf.js",
    "dev": "npx http-server -p 3001",
    "preview": "open index.html",
    "clean:pdfs": "rm -rf pdfs/*.pdf",
    "list:versions": "ls -la versions/",
    "list:pdfs": "ls -la pdfs/"
  },
  "//": "Generate baseline: npm run gen | Generate custom: node generate-pdf.js CompanyName",
  "dependencies": {
    "puppeteer": "^22.0.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  }
}
